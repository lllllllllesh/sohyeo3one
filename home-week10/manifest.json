{
    "manifest_version": 3,
    "name": "Fortune Cookie",
    "version": "1.0",
    "description": "Click the fortune cookie to get a quote",
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  